                                        </label>
                                        <label class="kt-radio">
                                            @{
                                                if (x.Value == false && x.Id != -1)
                                                {
                                                    @:<input type="radio" class="radioBox" data-Id="@x.Id" data-Key="@x.Key" data-IdClasse="@x.IdClasse" data-IdNota="@x.IdNota" data-TestoQuesito="@x.TestoQuesito" value="false" name="@idQuesito" checked> No
