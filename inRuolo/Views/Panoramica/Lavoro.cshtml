@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using inRuolo.Models
@{
    var ClassiDiConcorso = (List<ClasseConcorso>)ViewData["ClassiDiConcorso"];
}
<div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor">

    <!-- begin:: Subheader -->
    <div class="kt-subheader   kt-grid__item" id="kt_subheader">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">
                Lavoro
            </h3>
            <span class="kt-subheader__separator kt-hidden"></span>

        </div>
    </div>

    <!-- end:: Subheader -->
    <!-- begin:: Content -->
    <div class="kt-content  kt-grid__item kt-grid__item--fluid" id="kt_content">
        <h3 class="display-4 text-center">Periodi Di Servizio</h3>
        <div class="kt-divider"><span></span></div>
        <br />
        <!--Begin::App-->
        <div class="kt-grid kt-grid--desktop kt-grid--ver kt-grid--ver-desktop kt-app">
            <!--Begin:: App Content-->

            <div class="kt-portlet">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            Riepilogo Periodi Supplenza
                        </h3>
                        <button type="button" id="aggiungiPeriodo" class="btn btn-primary" style="position: absolute; right: 10px;" data-toggle="modal" data-target="#modalPeriodo"><i class="fa fa-plus"></i> Aggiungi</button>
                    </div>
                </div>
                <div class="kt-portlet__body">

                    <!--begin::Section-->
                    <div class="kt-section">
                        <div class="kt-section__content">
                            <div class="">
                                <table class="table">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>#</th>
                                            <th>Periodo</th>
                                            <th>Scuola</th>
                                            <th>Classe</th>
                                            <th>Giorni</th>
                                            <th>Punti</th>
                                            <th>Modifica</th>
                                        </tr>
                                    </thead>
                                    <tbody id="tableBody">
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                    <!--end::Section-->

                </div>
            </div>
            <!-- Modal -->
            <div class="modal fade" id="modalPeriodo" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content" id="modalContent">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLongTitle">Aggiungi Periodo</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <label for="exampleFormControlSelect1">Periodo</label>
                            <div class="form-group">
                                <div class="input-daterange input-group" id="kt_datepicker_5">
                                    <input type="text" class="form-control" name="start" id="dateStart" placeholder="Data Inizio">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><i class="la la-ellipsis-h"></i></span>
                                    </div>
                                    <input type="text" class="form-control" name="end" id="dateEnd" placeholder="Data Fine">
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Regione</label>
                                <select class="form-control kt-select2" id="regione" name="param">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Provincia</label>
                                <select class="form-control kt-select2" id="provincia" name="param">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Comune</label>
                                <select class="form-control kt-select2" id="comune" name="param">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Codice Scuola</label>
                                <select class="form-control kt-select2" id="cod" name="param">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Nome Scuola</label>
                                <select class="form-control kt-select2" id="scuola" name="param">
                                    <option></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Classe Concorso</label>
                                <select class="form-control kt-select2" id="cdc" name="param">
                                    <option></option>
                                    @foreach (var x in ClassiDiConcorso)
                                    {
                                        
                                        <option value="@x.Id">@x.Nome - @x.Descrizione</option>
                                    }
                                    </select>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Annulla</button>
                            <button type="button" class="btn btn-primary" id="salvaPeriodo">Salva</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--End:: App Content-->
        </div>

        <!--End::App-->
    </div>
    <!-- end:: Content -->
</div>

@section JavaScript
{
    @*<script src="~/Content/js/demo1/pages/crud/forms/widgets/bootstrap-datepicker.js" type="text/javascript"></script>*@
    <script src="~/Content/js/lavoro.js" type="text/javascript"></script>

}